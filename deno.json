{
  "name": "@dreamer/auth",
  "version": "1.0.0",
  "exports": {
    ".": "./src/mod.ts",
    "./jwt": "./src/jwt.ts",
    "./session": "./src/session.ts",
    "./oauth": "./src/oauth.ts",
    "./refresh": "./src/refresh.ts"
  },
  "imports": {
    "@dreamer/i18n": "jsr:@dreamer/i18n@^1.0.1",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.11",
    "@dreamer/crypto": "jsr:@dreamer/crypto@^1.0.1",
    "@dreamer/session": "jsr:@dreamer/session@^1.0.3",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.15"
  },
  "tasks": {
    "test": "deno test -A tests/",
    "check": "deno check src/mod.ts",
    "lint": "deno lint src/ tests/",
    "fmt": "deno fmt src/ tests/"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "deno.json",
      "README.md",
      "LICENSE",
      "NOTICE"
    ],
    "exclude": [
      "tests/**",
      "**/*.test.ts"
    ]
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.window"
    ]
  }
}
